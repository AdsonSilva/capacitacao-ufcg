<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.capacitacao.embedded.aula02">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".LifecycleActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".FragmentLifecycleActivity"
            android:label="Fragment Lifecycle">
        </activity>

        <activity
            android:name=".ActivityA"
            android:label="Activity A">
        </activity>

        <activity
            android:name=".ActivityB"
            android:label="Activity B">
            <intent-filter>
                <action android:name="com.capacitacao.embedded.aula02.implicit" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".ActivityWithFragment"
            android:label="Activity com Fragments">
        </activity>
    </application>

</manifest>

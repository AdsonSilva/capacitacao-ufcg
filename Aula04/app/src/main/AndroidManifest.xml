<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.rogersdk.aula04">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".BoundServiceActivity"
            android:label="Bound Service Activity"
            >

        </activity>

        <!--DeclaraÃ§ao do LifecycleService-->
        <service android:name=".LifecycleService"
            android:label="Lifecycle Service" />

        <service android:name=".BoundService"
            android:label="Bound Service" />

    </application>

</manifest>
